<VirtualHost remcohayes.me:443>
        ServerName remcohayes.me

        UseCanonicalName Off
        SSLEngine on
        SSLCertificateFile /etc/letsencrypt/live/remcohayes.me/cert.pem
        SSLCertificateKeyFile /etc/letsencrypt/live/remcohayes.me/privkey.pem
        Include /etc/letsencrypt/options-ssl-apache.conf
        SSLCertificateChainFile /etc/letsencrypt/live/remcohayes.me/chain.pem

        SSLCipherSuite EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH
        SSLProtocol All -SSLv2 -SSLv3
        SSLHonorCipherOrder On

        <IfModule mod_headers.c>
                Header always set Strict-Transport-Security "max-age=63072000; includeSubdomains; preload"
                Header always set X-Frame-Options DENY
                Header always set X-Content-Type-Options nosniff
                Header set X-XSS-Protection "1; mode=block"
                Header set Content-Security-Policy "default-src 'self' 'unsafe-inline' data: remcohayes.me:* crec$
        </IfModule>

        ServerAdmin crecketgaming@gmail.com
        DocumentRoot /var/www/remcohayes.me/public_html
</VirtualHost>

<VirtualHost remcohayes.me:80>
        DocumentRoot /var/www/html
        ServerName remcohayes.me
        Redirect 301 / https://remcohayes.me/
</VirtualHost>